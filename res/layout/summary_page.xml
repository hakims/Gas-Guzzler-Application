<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/ggbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <ImageView
        android:id="@+id/im_odometerLogoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:contentDescription="@string/logo_text"
        android:src="@drawable/gg_logo" />

    <TextView
        android:id="@+id/tv_averageVolumeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_volumePurchasedText"
        android:layout_alignBottom="@+id/tv_volumePurchasedText"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="@string/vol_placeholder_summaryText" />

    <TextView
        android:id="@+id/text_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_odometerLogoImage"
        android:layout_centerHorizontal="true"
        android:text="@string/summary_text"
        android:textSize="24sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/b_toHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/history_button_custom" />

    <Button
        android:id="@+id/b_toHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_toGraphs"
        android:layout_alignRight="@+id/tv_averageVolumeDisplay"
        android:text="@string/summary_to_main" />

    <Button
        android:id="@+id/b_toGraphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_toHistory"
        android:layout_alignLeft="@+id/b_toHome"
        android:text="@string/Graph_button_custom" />

    <TextView
        android:id="@+id/tv_mpgDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_averageVolumeDisplay"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="@string/mgp_placeholder_summaryText" />

    <TextView
        android:id="@+id/tv_volumePurchasedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_toHome"
        android:layout_alignLeft="@+id/b_toHome"
        android:ems="10"
        android:text="@string/avg_vol_summaryText" />

    <TextView
        android:id="@+id/tv_mpgsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_mpgDisplay"
        android:layout_alignLeft="@+id/tv_ppgText"
        android:ems="10"
        android:text="@string/avg_mpg_summaryText" />

    <TextView
        android:id="@+id/tv_ppgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_ppgDisplay"
        android:layout_alignBottom="@+id/tv_ppgDisplay"
        android:layout_alignLeft="@+id/tv_volumePurchasedText"
        android:ems="10"
        android:text="@string/avg_ppg_summaryText" />

    <TextView
        android:id="@+id/tv_ppgDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_mpgsText"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="@string/ppg_placeholder_summaryText" />

</RelativeLayout>