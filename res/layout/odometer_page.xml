<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/ggbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editText_odometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Next2"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:hint="Enter Odometer Reading"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/b_toVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_backtoVolume"
        android:layout_alignLeft="@+id/b_backtoVolume"
        android:layout_marginBottom="18dp"
        android:text="MOAR GUZZLING!" />

    <Button
        android:id="@+id/b_backtoVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_odometer"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:text="Back" />

</RelativeLayout>
