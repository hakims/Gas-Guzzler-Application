<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gasguzzler"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.WAKE_LOCK" /> 
	<uses-permission android:name="com.foxcatch.code.insecure.LOCATION_FINDER" /> 
	
    
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" > 
        
        <activity
            android:name="com.example.gasguzzler.MainActivity"           
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GasPricePage"></activity>
        <activity android:name=".GasVolumePage"></activity>
        <activity android:name=".OdometerPage"></activity>
        <activity android:name=".VerificationPage"></activity>
        <activity android:name=".SummaryPage"></activity>
        <activity android:name=".HistoryPage"></activity>
        <activity android:name=".QueryDatabase"></activity>
    </application>

</manifest>
