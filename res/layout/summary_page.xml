<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/ggbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <ImageView
        android:id="@+id/im_odometerLogoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:contentDescription="@string/logo_text"
        android:src="@drawable/gg_logo" />

    <Button
        android:id="@+id/b_toHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_toGraphs"
        android:layout_centerHorizontal="true"
        android:text="@string/summary_to_main" />

    <Button
        android:id="@+id/b_toHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b_toGraphs"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="94dp"
        android:text="View History" />

    <Button
        android:id="@+id/b_toGraphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_toHistory"
        android:layout_alignLeft="@+id/b_toHome"
        android:layout_marginBottom="17dp"
        android:text="Guzzle Graphs" />

    <TextView
        android:id="@+id/tv_ppgDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_mpgsText"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="PPG" />

    <TextView
        android:id="@+id/tv_averageVolumeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_volumePurchasedText"
        android:layout_alignBottom="@+id/tv_volumePurchasedText"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Average Volume" />

    <TextView
        android:id="@+id/tv_mpgDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_volumePurchasedText"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="MPG" />

    <TextView
        android:id="@+id/tv_volumePurchasedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b_toHome"
        android:layout_centerVertical="true"
        android:ems="10"
        android:text="Average Volume Purchased:" />

    <TextView
        android:id="@+id/tv_mpgsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_mpgDisplay"
        android:layout_alignLeft="@+id/tv_volumePurchasedText"
        android:ems="10"
        android:text="Average MPGs:" />

    <TextView
        android:id="@+id/tv_ppgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_ppgDisplay"
        android:layout_alignLeft="@+id/tv_mpgsText"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:text="Average PPG:" />

</RelativeLayout>